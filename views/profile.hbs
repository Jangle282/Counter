<div class="container">
  <div class="container">
    <div class="row">
      <div class="col-3">
        <i class="fas fa-user-circle fa-7x"></i>
      </div>
      <div class="col-7">
          <h4>{{user.firstName}} {{user.lastName}}</h4>
          <br>
          <p>{{user.email}}</p>
          <p>Role: {{user.role}}</p>
      </div>
      <div class="col-2">
        <form action="/edit-profile" method="GET">
          <button class="btn btn-outline-primary" >
            EDIT
          </button>
        </form>
      </div>
    </div>
  </div>
  <br><hr><br>
  <div class="container">
    {{#if projectsIown}}
    <div class="row">
      <h4>I own:</h4>
    </div>
    <br>
      {{#each projectsIown}}
        <div class="row">
          <div class="col-3"><a href="/project/{{_id}}">{{projectName}}</a></div>
          <div class="col-7">{{description}}</div>
          <div class="col-2">
            <form action="/project/{{_id}}" method="GET">
              <button class="btn btn-outline-primary">MANAGE</button>
            </form>
          </div>
        </div>
        <br>
      {{/each}}
    <br>
    {{/if}}
      <form action="/new-project" method="POST">
        <div class="form-group row">
          <div class="col-3">
            <input class="form-control" required type="text" placeholder="New" name="projectName"></input>
          </div>
          <div class="col-7">
            <input class="form-control" required type="text" placeholder="Description" name="description"></input>
          </div>
          <div class="col-2">
            <button class="btn btn-outline-primary">CREATE</button>
          </div>
        </div>
      </form>
    <br>
    {{#if projectsIparticipateIn}}
    <div class="row">
      <h4>I participate in:</h4>
    </div>
    <br>
      {{#each projectsIparticipateIn}}
        <div class="row">
          <div class="col-3"><a href="/project/{{_project.id}}">{{_project.projectName}}</a></div>
          <div class="col-7">{{_project.description}}</div>
          <div class="col-2">
            <form action="">
              <button class="btn btn-outline-danger">LEAVE</button>
            </form>
          </div>
        </div>
        <br>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>