<div class="container">
  {{#if message }}
    <h2>{{ message }}</h2>
    <h3>Visit our <a href="/">homepage</a> to find one üîç</h3>
  {{else}}
  <h2>Send your location</h2>
  <div id="map"></div>
  <br>
  <form action="/submit-data" method="POST">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <label class="input-group-text" for="project">Project</label>
      </div>
      <select class="custom-select" id="role" name="role">
        {{#each projects}}
          <option value={{_project.projectName}}>{{_project.projectName}}</option>
        {{/each}}
      </select>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <label class="input-group-text" for="comment">Comment</label>
      </div>
      <textarea class="form-control" type = "text" name="comment" placeholder="Place your comments here... "></textarea>
    </div>
  {{/if}}
</div>




