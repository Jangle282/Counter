<div class="container">
  {{#if message }}
  <h2>{{ message }}</h2>
  <h3>Visit our <a href="/">homepage</a> to find one üîç</h3>
  {{else}}
  <h2>Send your location</h2>
  <div id="map"></div>
  <br>
  <form action="/submit-data" method="POST">
    <div class="form-group row">
      <label class="col-3 col-form-label" for="project">Project</label>
      <div class="col-9">
        <select class="custom-select" id="role" name="role">
          {{#each projects}}
          <option value={{_project.projectName}}>{{_project.projectName}}</option>
          {{/each}}
        </select>
      </div>

    </div>
    <div class="form-group row">
      <label class="col-3 col-form-label" for="comment">Comment</label>
      <div class="col-9">
        <input class="form-control" type="text" name="comment" placeholder="Place your comment here... "></input>
      </div>
    </div>
    <br>
    <div class="form-group row justify-content-center">
      <button class="btn btn-primary">Submit data</button>
    </div>
  </form>
  {{/if}}
</div>


<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZDe4B_Awc9Wy8Mzh5DGzeMW98KOD3Vns"></script>
<script type="text/javascript" src="/javascripts/capture-data-map.js"></script>