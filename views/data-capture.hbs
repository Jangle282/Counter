<div class="container">
  {{#if message }}
  <h2 style="color:white">{{ message }}</h2>
  <br>
  <h3 style="color:white">Visit our <a href="/">homepage</a> to find one üîç</h3>
  {{else}}
  <h2 style="color:white">Send your location</h2>
  <div id="map"></div>
  <br>
  <form action="/submit-data/" method="POST">
    <div class="form-group row">
      <label style="color:white" class="col-3 col-form-label" for="projectNamet">Project</label>
      <div class="col-9">
        <select class="form-control" name="projectId">
          {{#each projects}}
          <option value="{{_project._id}}">{{_project.projectName}}</option>
          {{/each}}
        </select>
      </div>

    </div>
    <div class="form-group row">
      <label style="color:white" class="col-3 col-form-label" for="comment">Comment</label>
      <div class="col-9">
        <input  class="form-control" type="text" name="comment" placeholder="Place your comment here... "></input>
      </div>
    </div>
    <br>
    <input id="lat" type="hidden" value="" name="lat" />
    <input id="lng" type="hidden" value="" name="lng" />
    <div class="form-group row justify-content-center">
      <button class="btn btn-warning">Submit data</button>
    </div>
  </form>
  {{/if}}
</div>


<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZDe4B_Awc9Wy8Mzh5DGzeMW98KOD3Vns"></script>
<script>
  let center = {lat: 0, lng: 0}

  function startMap() {
  if (navigator.geolocation) {
    // Get current position
    navigator.geolocation.getCurrentPosition(function (position) {
      center = {
        lat: position.coords.latitude,
        lng: position.coords.longitude
      };
      const map = new google.maps.Map(
        document.getElementById('map'),
        {
          zoom: 18,
          center: center
        }
      );
      const currentPositionMarker = new google.maps.Marker({
        position: {
          lat: center.lat,
          lng: center.lng
        },
        map: map,
        title: "You are here",
        draggable: true
      });
      document.getElementById("lat").value = center.lat;
      document.getElementById("lng").value = center.lng;

      google.maps.event.addListener(currentPositionMarker, 'dragend' , function(evt) {
        document.getElementById("lat").value = evt.latLng.lat();
        document.getElementById("lng").value = evt.latLng.lng();
    });
    
    
    }, function () {
      // If something goes wrong
      console.log('Error in the geolocation service.');
    })
  } else {
    // Browser says: Nah! I do not support this.
    console.log('Browser does not support geolocation.');
  }
}

startMap();
</script>